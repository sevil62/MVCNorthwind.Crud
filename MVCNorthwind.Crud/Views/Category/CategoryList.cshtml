@model CategoryVM
@{
    ViewBag.Title = "CategoryList";
}


<div class="container">
    <div class="panel panel-body">
        Kategorileri Listeleyiniz - Kategori eklemek için @Html.ActionLink("tıklayınız","AddCategory")
    </div>
    <div class="panel panel-body">
        <table class="table table-hover">
            <thead>
               <tr>
                   <th>Kategori İsmi</th>
                   <th>Kategori Açıklama</th>
                   <th colspan="2" style="text-align:center;padding-right:20px">İşlemler</th>
               </tr>
            </thead>
            <tbody>
                @foreach (Category item in Model.Categories)
                {
                    <tr>
                        <td>@item.CategoryName</td>
                        <td>@item.Description</td>
                        <td>@Html.ActionLink("Güncelle","UpdateCategory",new {id=item.CategoryID },new {@class="btn btn-warning" })</td>
                        <td>@Html.ActionLink("Sil","DeleteCategory",new{id=item.CategoryID},new {@class="btn btn-warning" })</td>
                    </tr>
                }

            </tbody>
        </table>
    </div>

</div>