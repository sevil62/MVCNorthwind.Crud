@model CategoryVM
@{
    ViewBag.Title = "UpdateCategory";
}

<div class="container">
    <div class="panel panel-body">
        
        Güncellenecek Veriler

    </div>
    <div class="panel panel-primary">
        @using (Html.BeginForm("UpdateCategory","Category", FormMethod.Post)) 
        {
          @Html.HiddenFor(x=>x.Category.CategoryID)
            

            <div>
                @Html.TextBoxFor(x=>x.Category.CategoryName,new {placeholder="Kategori Adı"})
            </div>
         

            <div>
                @Html.TextBoxFor(x => x.Category.Description, new {placeholder="Kategori Açıklama"})
            </div>

            <button class="btn btn-warning">
                Güncelle
            </button>
        }
    </div>

</div>
